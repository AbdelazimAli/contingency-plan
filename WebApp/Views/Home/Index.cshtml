
@section Scripts {
 <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
  <script src="~/signalr/js"></script>
     <script>
         $(function () {
           
             var notificationHub = $.connection.myHub;
          
             notificationHub.client.AppendMessage = function (Msg) {
                 AppendNotifyElement("notification", Msg, "@Url.Action("GetNotify","Notification")");
             }
             $.connection.hub.start().done(function () {
                    
             });


         });
         
        $(document).ready(function () {
            $.ajax({
                url: "@Url.Action("GetLayOut", "Home")",
                dataType: 'json',
                contentType: "application/json",
                async: false,
                success: function (data) {
                    localStorage["Companies"] = JSON.stringify(data.Companies);
                    localStorage["Menus"] = JSON.stringify(data.Menus);
                    localStorage["Tabs"] = JSON.stringify(data.Tabs);
                    localStorage["Functions"] = JSON.stringify(data.Functions);
                }
            }); 
        });
    </script>
}