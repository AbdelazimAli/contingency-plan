@using WebApp.Extensions 

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/cssmin")
    @Scripts.Render("~/bundels/modernizr")
    

</head>
<body class="@(User.Identity.RTL() ? "rtl" : "ltr")">

    @Html.Partial("_NavBar")


    <div class="container-fluid">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundels/jquery")

    @Scripts.Render("~/bundels/kgrid")
    <script src="@string.Concat("/Scripts/cultures/kendo.culture.", User.Identity.GetCulture(), ".min.js")"></script>
    <script src="@string.Concat("/Scripts/messages/kendo.messages.", User.Identity.GetMessages(), ".min.js")"></script>

    @Scripts.Render("~/bundels/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
